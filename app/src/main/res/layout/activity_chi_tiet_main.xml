<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ChiTietMainActivity">

    <ImageView
        android:id="@+id/img_hinhanhsp"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:padding="8dp"
        android:src="@drawable/ic_media_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textColor="@android:color/holo_red_light"
        android:textSize="18dp"
        android:id="@+id/tv_tensp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Tên Sản Phẩm"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_hinhanhsp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textColor="@android:color/holo_red_light"
        android:textSize="18dp"
        android:id="@+id/tv_giasp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Giá : 25000đ"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_hinhanhsp"
        app:layout_constraintTop_toBottomOf="@id/tv_tensp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_control_point_24"
        android:id="@+id/img_cong"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_soluong"
        app:layout_constraintEnd_toStartOf="@id/tv_soluong"
        app:layout_constraintStart_toEndOf="@id/img_hinhanhsp"
        app:layout_constraintTop_toBottomOf="@id/tv_giasp" />

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/tv_soluong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@id/img_tru"
        app:layout_constraintStart_toEndOf="@id/img_cong"
        app:layout_constraintTop_toBottomOf="@id/tv_giasp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_outline_24"
        android:id="@+id/img_tru"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_soluong"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_soluong"
        app:layout_constraintTop_toBottomOf="@id/tv_giasp" />


</androidx.constraintlayout.widget.ConstraintLayout>