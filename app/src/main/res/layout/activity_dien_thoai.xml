<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DienThoaiActivity">
    <androidx.appcompat.widget.Toolbar
        app:title="Điện Thoại"
        android:background="#F8ED1B0C"
        android:id="@+id/toolbarmanhinhdienthoai"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" >
    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="5dp"
        android:id="@+id/rcv_dienthoai"
        android:layout_width="match_parent"
        android:layout_height="0dp"
      app:layout_constraintTop_toBottomOf="@+id/toolbarmanhinhdienthoai"
        app:layout_constraintBottom_toBottomOf="parent"
      />

</androidx.constraintlayout.widget.ConstraintLayout>